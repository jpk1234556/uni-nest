generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User roles enum
enum UserRole {
  student
  hostel_owner
  admin
}

// Booking status enum
enum BookingStatus {
  pending
  confirmed
  cancelled
  completed
}

// Users table
model User {
  id               String    @id @default(cuid())
  email            String    @unique
  passwordHash     String    @map("password_hash")
  firstName        String    @map("first_name")
  lastName         String    @map("last_name")
  phone            String?
  role             UserRole  @default(student)
  profileImageUrl  String?   @map("profile_image_url")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")
  isVerified       Boolean   @default(false) @map("is_verified")

  // Relations
  studentProfile   StudentProfile?
  ownedHostels     Hostel[]
  bookings         Booking[]
  reviews          Review[]

  @@map("users")
}

// Universities table
model University {
  id          String    @id @default(cuid())
  name        String
  shortCode   String    @unique @map("short_code")
  address     String
  latitude    Decimal?
  longitude   Decimal?
  logoUrl     String?   @map("logo_url")
  isActive    Boolean   @default(true) @map("is_active")
  createdAt   DateTime  @default(now()) @map("created_at")

  // Relations
  hostels     Hostel[]
  studentProfiles StudentProfile[]

  @@map("universities")
}

// Hostels table
model Hostel {
  id          String    @id @default(cuid())
  name        String
  description String?
  address     String
  latitude    Decimal?
  longitude   Decimal?
  distanceFromUniversity Float? @map("distance_from_university")
  ownerId     String    @map("owner_id")
  universityId String?  @map("university_id")
  isActive    Boolean   @default(true) @map("is_active")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relations
  owner       User      @relation(fields: [ownerId], references: [id])
  university  University? @relation(fields: [universityId], references: [id])
  roomTypes   RoomType[]
  bookings    Booking[]
  reviews     Review[]
  images      HostelImage[]

  @@map("hostels")
}

// Room types table
model RoomType {
  id          String    @id @default(cuid())
  hostelId    String    @map("hostel_id")
  name        String
  description String?
  capacity    Int
  pricePerMonth Decimal  @map("price_per_month")
  availableCount Int     @default(0) @map("available_count")
  totalCount  Int       @default(0) @map("total_count")
  amenities   String[]  // Array of amenities
  images      RoomImage[]
  bookings    Booking[]

  // Relations
  hostel      Hostel    @relation(fields: [hostelId], references: [id])

  @@map("room_types")
}

// Bookings table
model Booking {
  id          String        @id @default(cuid())
  studentId   String        @map("student_id")
  hostelId    String        @map("hostel_id")
  roomTypeId  String        @map("room_type_id")
  status      BookingStatus @default(pending)
  startDate   DateTime      @map("start_date")
  endDate     DateTime      @map("end_date")
  totalPrice  Decimal       @map("total_price")
  message     String?
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  // Relations
  student     User          @relation(fields: [studentId], references: [id])
  hostel      Hostel        @relation(fields: [hostelId], references: [id])
  roomType    RoomType      @relation(fields: [roomTypeId], references: [id])

  @@map("bookings")
}

// Reviews table
model Review {
  id          String    @id @default(cuid())
  studentId   String    @map("student_id")
  hostelId    String    @map("hostel_id")
  rating      Int       // 1-5 stars
  comment     String?
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relations
  student     User      @relation(fields: [studentId], references: [id])
  hostel      Hostel    @relation(fields: [hostelId], references: [id])

  @@map("reviews")
}

// Student profiles table
model StudentProfile {
  id           String    @id @default(cuid())
  userId       String    @unique @map("user_id")
  universityId String    @map("university_id")
  studentId    String    @unique @map("student_id")
  yearOfStudy  Int       @map("year_of_study")
  course       String?
  preferences  Json?     // JSON for student preferences
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  // Relations
  user         User      @relation(fields: [userId], references: [id])
  university   University @relation(fields: [universityId], references: [id])

  @@map("student_profiles")
}

// Hostel images table
model HostelImage {
  id       String @id @default(cuid())
  hostelId String @map("hostel_id")
  imageUrl String @map("image_url")
  altText  String? @map("alt_text")
  order    Int    @default(0)

  // Relations
  hostel   Hostel @relation(fields: [hostelId], references: [id])

  @@map("hostel_images")
}

// Room images table
model RoomImage {
  id         String @id @default(cuid())
  roomTypeId String @map("room_type_id")
  imageUrl   String @map("image_url")
  altText    String? @map("alt_text")
  order      Int    @default(0)

  // Relations
  roomType   RoomType @relation(fields: [roomTypeId], references: [id])

  @@map("room_images")
}
